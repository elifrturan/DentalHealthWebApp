@model DentalHealthApp.Models.HomeViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<style>
    .note-link {
        text-decoration: none;
        color: black;
        font-size: 18px;
        margin-bottom: 4px;
    }

    .note-link:hover {
        color: darkgray;
     }

    .custom-dropdown .btn {
        border-radius: 50px;
        font-size: 16px;
        margin-bottom: 5px;
        padding: 10px 20px;
        color: white;
        border: none;
        transition: background-color 0.3s;
    }

    .custom-dropdown-menu {
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .custom-dropdown-menu .dropdown-item {
        padding: 10px 20px;
        font-size: 16px;
    }
</style>

<div class="container">
    <h1>Ağız ve Diş Sağlığı</h1>
    <br />

    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <a class="nav-link active" id="situation-tab" data-bs-toggle="tab" href="#situation" role="tab" aria-controls="situation" aria-selected="true">Durum</a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link" id="goal-tab" data-bs-toggle="tab" href="#goal" role="tab" aria-controls="goal" aria-selected="false">Hedef</a>
        </li>
    </ul>

    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="situation" role="tabpanel" aria-labelledby="situation-tab">
            @await Html.PartialAsync("~/Views/Health/StatusPartial.cshtml")
        </div>
        <div class="tab-pane fade" id="goal" role="tabpanel" aria-labelledby="goal-tab">
            @await Html.PartialAsync("~/Views/Health/GoalPartial.cshtml")
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#situation').addClass('show active');

        $('#myTab a').on('click', function (e) {
            e.preventDefault();
            $(this).tab('show');
        });
    });
</script>