@model DentalHealthApp.Models.HomeViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

<div class="container">
    <br />
    <h1>Hoş Geldiniz, @Model.UserName</h1>
    <br />
    <div>
        <h3 class="page-title">
            <span class="page-title-icon bg-gradient-primary text-white mr-2">
                <i class="mdi mdi-home"></i>
            </span> Giriş
        </h3>
    </div>
    <br />
    <h4>Son 7 Gün İçindeki Verileriniz</h4><hr />
    @if (Model.LastWeekHealthRecords == null || !Model.LastWeekHealthRecords.Any())
    {
        <p>Son 7 gün içerisinde hiç veri kaydetmediniz.</p>
    }
    else
    {
        <div style="overflow-x: auto; max-height: 400px; overflow-y: auto;">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Tarih</th>
                        <th>Saat</th>
                        <th>Açıklama</th>
                        <th>Uygulanma Durumu</th>
                        <th>Süresi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var record in Model.LastWeekHealthRecords)
                    {
                        <tr>
                            <td>@record.RecordDate.ToString("dd/MM/yyyy")</td>
                            <td>@record.RecordTime.ToString("hh:mm tt")</td>
                            <td style="max-width: 200px; overflow-x: auto;">@record.RecordDescription</td>
                            @if (record.IsApplied == true)
                            {
                                <td>Uygulandı</td>
                            }
                            else
                            {
                                <td>Uygulanmadı</td>
                            }
                            <td>@record.RecordDuration</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
    }

    <hr />
    <br />
    <div>
        <h3 class="page-title">
            <span class="page-title-icon bg-gradient-primary text-white mr-2">
                <i class="mdi mdi-heart-pulse"></i>
            </span> Tavsiye <i class="mdi mdi-emoticon-happy"></i>
        </h3>
    </div>
    <br />

    <div class="border border-primary p-2 rounded">
        <div class="d-flex flex-column p-2">
            <div>
                <h4 class="font-weight-normal p-3 bg-opacity-10">@Model.RandomRecommendation.RecommendationText <i class="mdi mdi-emoticon-happy"></i> </h4>
            </div>
        </div>
    </div>
</div>