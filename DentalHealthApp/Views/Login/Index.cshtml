
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Start/StartingLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth">
                <div class="row flex-grow">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left p-5">
                            <div class="brand-logo">
                                <h2>Ağız ve Diş Sağlığı Takip Uygulaması</h2>
                            </div>
                            <h4>Hoş Geldin!</h4>
                            <h6 class="font-weight-light">Giriş yapmak için gerekli bilgileri doldur.</h6>
                            @if (!ViewData.ModelState.IsValid)
                            {
                                var errors = ViewData.ModelState.Values.SelectMany(v => v.Errors);
                                foreach (var error in errors)
                                {
                                    <div class="alert alert-danger">
                                        @error.ErrorMessage
                                    </div>
                                }
                            }
                            <form asp-action="Index" method="post" onsubmit="return validateForm()">
                                <div class="form-group">
                                    <input type="email" name="email" class="form-control form-control-lg" placeholder="Mail Adresi" required>
                                </div>
                                <div class="form-group">
                                    <input type="password" name="password" class="form-control form-control-lg" placeholder="Şifre" required>
                                </div>
                                <div class="mt-3">
                                    <button type="submit" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn">GİRİŞ YAP</button>
                                </div>
                                <div class="my-2 d-flex justify-content-between align-items-center">
                                    <div class="form-check">
                                        <label class="form-check-label text-muted">
                                            <input type="checkbox" class="form-check-input"> Bilgileri Sakla
                                        </label>
                                    </div>
                                    <a href="/PasswordReset/Index/" class="auth-link text-black">Şifremi Unuttum?</a>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Hesabın yok mu? <a href="/Register/Index/" class="text-primary">Kayıt Ol</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/tema/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- inject:js -->
    <script src="~/tema/assets/js/off-canvas.js"></script>
    <script src="~/tema/assets/js/hoverable-collapse.js"></script>
    <script src="~/tema/assets/js/misc.js"></script>
    <script>
        function validateForm() {
            var email = document.querySelector('input[name="email"]').value;
            var password = document.querySelector('input[name="password"]').value;

            if (!email || !password) {
                alert('Email ve şifre alanları zorunludur.');
                return false;
            }
            return true;
        }
    </script>
</body>
</html>